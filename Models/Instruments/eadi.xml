<?xml version="1.0"?>
<PropertyList>

    <path>efis84-eadi.ac</path>

    <animation>
        <name>EADIlit</name>
        <object-name>AIback</object-name>
        <object-name>ladder</object-name>
        <object-name>ROLLneedle</object-name>
        <object-name>GPS-slaved</object-name>
        <object-name>GPS-alt</object-name>
        <object-name>GPS-navmode</object-name>
        <object-name>FDbars</object-name>
        <object-name>GS-scale</object-name>
        <object-name>EADI.face</object-name>
        <object-name>GS-pointer</object-name>
        <object-name>LOC-pointer</object-name>
        <object-name>PFD.001</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>EADIlit</object-name>
        <emission>
            <red>0.035</red>
            <green>0.035</green>
            <blue>0.035</blue>
            <factor-prop>systems/electrical/outputs/efis-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>EADI.bezel</object-name>
        <object-name>slipball</object-name>
        <object-name>glass</object-name>
        <emission>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
            <factor-prop>systems/electrical/outputs/panel-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>FDbars</object-name>
        <condition>
            <or>
                <not-equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>0</value>
                </not-equals>
                <not-equals>
                    <property>instrumentation/flightdirector/vnav</property>
                    <value>0</value>
                </not-equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>GS-pointer</object-name>
        <condition>
            <and>
                <less-than>
                    <property>instrumentation/nav/gs-distance</property>
                    <value>30000</value>
                </less-than>
                <property>instrumentation/nav/has-gs</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>GS-scale</object-name>
        <condition>
            <less-than>
                <property>instrumentation/nav/gs-distance</property>
                <value>30000</value>
            </less-than>
        </condition>
        <property>instrumentation/nav/has-gs</property>
        <factor>-0.05</factor>
        <axis>
            <x>0.0</x>
            <y>1</y>
            <z>0.0</z>
        </axis>
    </animation>


    <animation>
        <type>translate</type>
        <object-name>slipball</object-name>
        <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <min>-1.0</min>
        <max>1.0</max>
        <interpolation>
            <entry><ind>-1.0</ind><dep>-0.02</dep></entry>
            <entry><ind>1.0</ind><dep>0.02</dep></entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.095</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDbars</object-name>
        <property>autopilot/settings/target-pitch-deg</property>
        <factor>0.00087</factor>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
        <center>
            <x-m>0.000</x-m>
            <y-m>0</y-m>
            <z-m>0.001</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>FDbars</object-name>
        <property>autopilot/internal/target-roll-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0</y-m>
            <z-m>0.007</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>FDbars</object-name>
        <property>orientation/roll-deg</property>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0</y-m>
            <z-m>0.007</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ROLLneedle</object-name>
        <property>orientation/roll-deg</property>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0</y-m>
            <z-m>0.007</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDbars</object-name>
        <property>orientation/pitch-deg</property>
        <factor>0.00087</factor>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>-1.0</z>
        </axis>
        <center>
            <x-m>0.000</x-m>
            <y-m>0</y-m>
            <z-m>0.001</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>GS-pointer</object-name>
        <property>instrumentation/nav/gs-needle-deflection-norm</property>
        <interpolation>
            <entry><ind>-1.0</ind><dep>-0.0108</dep></entry>
            <entry><ind>1.0</ind><dep>0.0108</dep></entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
        <center>
            <x-m>0.000</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>LOC-pointer</object-name>
        <property>instrumentation/flightdirector/deflection</property>
        <factor>0.00116</factor>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
    </animation>

    <animation>
        <type>texmultiple</type>
        <object-name>AIback</object-name>
        <transform>
            <property>orientation/pitch-deg</property>
            <subtype>textranslate</subtype>
            <factor>0.00195</factor>
            <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
            </axis>
        </transform>
        <transform>
            <property>orientation/roll-deg</property>
            <subtype>texrotate</subtype>
            <center>
                <x>0.375</x>
                <y>0.5</y>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </transform>
    </animation>

    <animation>
        <type>texmultiple</type>
        <object-name>ladder</object-name>
        <transform>
            <property>orientation/pitch-deg</property>
            <subtype>textranslate</subtype>
            <factor>0.003777</factor>
            <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
            </axis>
        </transform>
        <transform>
            <property>orientation/roll-deg</property>
            <subtype>texrotate</subtype>
            <center>
                <x>0.125</x>
                <y>0.5</y>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </transform>
    </animation>

</PropertyList>