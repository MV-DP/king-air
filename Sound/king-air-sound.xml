<?xml version="1.0"?>
 
<PropertyList>

    <fx>

<!-- Engine 1 -->

        <prop1>
            <name>prop1-external</name>
            <condition>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </condition>
            <reference-dist>150.0</reference-dist>
            <max-dist>250.0</max-dist>
            <mode>looped</mode>
            <path>Sounds/turboprop1.wav</path>
            <property>engines/engine[0]/running</property>
            <volume>
                <property>fdm/jsbsim/propulsion/engine[0]/n1</property>
                <scale>0.01</scale>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>fdm/jsbsim/propulsion/engine[0]/n1</property>
                <offset>-0.4</offset>
                <factor>0.02</factor>
                <min>0</min>
                <max>2.0</max>
            </pitch>
            <position>
                <x>-2</x>
                <y>2</y>
                <z>-0</z>
            </position>
        </prop1>

        <prop1b>
            <name>prop1-internal</name>
            <condition>
                <property>sim/current-view/internal</property>
            </condition>
            <mode>looped</mode>
            <path>Sounds/turboprop1.wav</path>
            <property>engines/engine[0]/running</property>
            <volume>
                <property>fdm/jsbsim/propulsion/engine[0]/n1</property>
                <scale>0.0025</scale>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <pitch>
                <property>fdm/jsbsim/propulsion/engine[0]/n1</property>
                <offset>-0.4</offset>
                <factor>0.02</factor>
                <min>0</min>
                <max>2.0</max>
            </pitch>
            <position>
                <x>-2</x>
                <y>2</y>
                <z>0</z>
            </position>
        </prop1b>

<!-- Engine 2 -->

        <prop2>
            <name>prop2-external</name>
            <condition>
                <equals>
                    <property>sim/current-view/internal</property>
                    <value>false</value>
                </equals>
            </condition>
            <reference-dist>150.0</reference-dist>
            <max-dist>500.0</max-dist>
            <mode>looped</mode>
            <path>Sounds/turboprop1.wav</path>
            <property>engines/engine[1]/running</property>
            <volume>
                <property>fdm/jsbsim/propulsion/engine[1]/n1</property>
                <scale>0.01</scale>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>fdm/jsbsim/propulsion/engine[1]/n1</property>
                <offset>-0.4</offset>
                <factor>0.02</factor>
                <min>0</min>
                <max>2.0</max>
            </pitch>
            <position>
                <x>-2</x>
                <y>-2</y>
                <z>-0</z>
            </position>
        </prop2>

        <prop2b>
            <name>prop2-internal</name>
            <condition>
                <equals>
                    <property>sim/current-view/internal</property>
                    <value>true</value>
                </equals>
            </condition>
            <mode>looped</mode>
            <path>Sounds/turboprop1.wav</path>
            <property>engines/engine[1]/running</property>
            <volume>
                <property>fdm/jsbsim/propulsion/engine[1]/n1</property>
                <scale>0.0025</scale>
                <min>0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>fdm/jsbsim/propulsion/engine[1]/n1</property>
                <offset>-0.4</offset>
                <factor>0.02</factor>
                <min>0</min>
                <max>2.0</max>
            </pitch>
            <position>
                <x>-2</x>
                <y>-2</y>
                <z>-0</z>
            </position>
        </prop2b>

        <rumble>
            <name>rumble</name>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <mode>looped</mode>
            <path>Aircraft/king-air/Sound/rumble.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                </or>
            </condition>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <factor>0.05</factor>
                <max>0.5</max>
            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </rumble>

        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>Sounds/gear.wav</path>
            <property>gear/gear[0]/position-norm</property>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <pitch>
                <internal>dt_play</internal>
                <offset>0.8</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </gear>

        <gear>
            <name>gear-lock</name>
            <path>Sounds/gear-lck.wav</path>
            <condition>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>0</value>
                </equals>
            </condition>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </gear>

        <squeal>
            <name>squeal</name>
            <reference-dist>10.0</reference-dist>
            <max-dist>20.0</max-dist>
            <path>Sounds/squeal2.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                </or>
            </condition>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
            </volume>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </squeal>
 
        <flap>
            <name>flaps</name>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
            <mode>in-transit</mode>
            <path>Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </flap>

        <wind>
            <name>wind</name>
            <reference-dist>0.5</reference-dist>
            <max-dist>1.0</max-dist>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <position>
                <x>-5</x>
                <y>0</y>
                <z>0</z>
            </position>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
        </wind>

        <stall>
            <name>stall</name>
            <mode>looped</mode>
            <path>Aircraft/king-air/Sound/stall.wav</path>
            <condition>
                <and>
                    <greater-than>
                        <property>orientation/alpha-deg</property>
                        <value>10</value>
                    </greater-than>
                    <less-than>
                        <property>orientation/alpha-deg</property>
                        <value>20</value>
                    </less-than>
                </and>
            </condition>
    </stall>

    </fx>

</PropertyList>